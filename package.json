{
  "name": "gardencycle-planner",
  "version": "1.0.0",
  "description": "Lokale Garten- und Pflanzplanung: Pflanz- und Erntezyklen ohne Cloud",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "icons": "node build/svg-to-ico.js",
    "prebuild": "node build/svg-to-ico.js"
  },
  "author": "",
  "license": "MIT",
  "dependencies": { "jspdf": "^2.5.2" },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "sharp": "^0.33.0",
    "png-to-ico": "^2.1.1"
  },
  "build": {
    "appId": "com.gardencycle.planner",
    "productName": "GardenCycle Pro",
    "icon": "build/icon.ico",
    "directories": { "output": "dist" },
    "publish": null,
    "win": {
      "target": ["nsis"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerLanguages": ["de-DE", "en-US"]
    }
  }
}

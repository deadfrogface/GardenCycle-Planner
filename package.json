{
  "name": "gardencycle-planner",
  "version": "1.0.0",
  "description": "Lokale Garten- und Pflanzplanung: Pflanz- und Erntezyklen ohne Cloud",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.gardencycle.planner",
    "productName": "GardenCycle Planner",
    "directories": { "output": "dist" },
    "publish": null,
    "win": {
      "target": ["nsis"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerLanguages": ["de-DE", "en-US"]
    }
  }
}
